extends layout

block content
  div.container.theme-showcase(role="main")
    div.jumbotron
      h1= title
    div(ng-app="myApp" ng-controller="gestor")
      p.lead IP DEL SERVIDOR:
        input(placeholder="localhost:3000" ng-model="servidor")
      button.btn-primary(ng-click="guardarServidor(servidor)") a√±adir
      div(ng-repeat="servidor in servidores track by $index")
        h1 {{servidor.servidor}}
        p.lead PROCESO:
          input(placeholder="1" ng-model="pro")
          button.btn-primary(ng-click="crear(pro, servidor)") crear
          table.table
            tbody(ng-repeat="proceso in servidor.procesos track by $index")
              tr
                td(style="width: 10%") {{proceso}}
                td(style="width: 20%")
                  button.btn-success(ng-click="arrancar(proceso, servidor.servidor)") arrancar
                td(style="width: 20%")
                  button.btn-danger(ng-click="parar(proceso, servidor.servidor)") parar
                td(style="width: 10%") {{info[proceso].coordinador}}
                td(style="width: 20%") {{info[proceso].eleccion}}
                td(style="width: 20%") {{info[proceso].estado}}

  script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js")
  script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.9/angular.min.js")
  link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
  script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js")
  script(src="javascripts/controllers/gestor.js")

